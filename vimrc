set number
set relativenumber
set nocompatible
set mouse=a
set ttimeoutlen=100
set backspace=2
set tabstop=8
set shiftwidth=8
set incsearch
set ignorecase
set nowrap
set textwidth=79
set hlsearch
set ruler
set background=light
set encoding=utf-8
set laststatus=0

map <Space>y "+y
map <Space>d "+d
map <Space>w :%s/\s\+$//e

syntax on
filetype indent on
